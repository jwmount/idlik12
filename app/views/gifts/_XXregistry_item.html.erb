#item

  <% if !@gift.name.nil? %>
    <%= link_to (image_tag @gift.photo.url(:preview)), user_gift_path(@user,@gift.id) %>

    <div class="item_inner" style="background-position:50%, 50%; background-repeat:no-repeat;" >
      
      <h3><%=h @gift.name %>  </h3>
<!-- 
      <p>< h gift.description ></p>
-->
      <a href="share.html"><img src="assets/btn_share.png" alt="Share Item" /></a>
      <%= link_to (image_tag("btn_details.png")), user_gift_path(@user,@gift) %>
      <%= link_to( image_tag("btn_delete.png" ), gift_path(@gift.id), 
             data: {confirm: "Are you sure you want to remove this item?"}, 
             method: :delete 
             ) %>

    </div><!-- item_inner -->

<% else %>

  <div class="item_inner" style="background:url(assets/items/item1.jpg); background-position:50%, 50%; background-repeat:no-repeat;" >
    <div class="actions">

        <a href="item.html"><img src="assets/btn_details.png" alt="Show Details / Edit Item" /></a>
      <a href="share.html"><img src="assets/btn_share.png" alt="Share Item" /></a>
      <%= link_to(image_tag("btn_delete.png"), gift_path(@gift_id), 
            data: {confirm: "Are you sure?"}, 
            method: :delete 
            ) %>

    </div><!-- actions -->
  </div><!-- item_inner -->

<% end %> 


</div><!-- item -->

<div class="clearer"></div>

